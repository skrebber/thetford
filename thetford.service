[Unit]

Description = Thetford N4000 data to MQTT service
After = network.target
StartLimitInterval = 200
StartLimitBurst = 5

[Service]
EnvironmentFile=-/etc/default/thetford2mqtt
Type = simple
ExecStart = /usr/bin/python3 /usr/local/bin/thetford.py ${THETFORD_MQTT} ${THETFORD_MQTT_USER} ${THETFORD_MQTT_PASS} ${THETFORD_TOPIC} ${THETFORD_MODEL} ${THETFORD_LOG_LEVEL} ${THETFORD_OPTS}
Restart = always
RestartSec = 30

[Install]

WantedBy = multi-user.target
